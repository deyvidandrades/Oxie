<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Oxie" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--DARK!!!-->
        <item name="android:colorPrimary">@color/backgroundDark</item>
        <item name="android:colorSecondary">@color/backgroundLight</item>
        <item name="android:colorBackground">@color/backgroundDark</item>

        <item name="android:textColor">@color/text</item>
        <item name="android:textColorSecondary">@color/textLight</item>
        <item name="android:colorAccent">@color/accentBlue</item>
        <item name="colorAccent">@color/accentBlue</item>

        <item name="android:statusBarColor">@color/backgroundLight</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/backgroundDark</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>

    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/backgroundDark</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.Oxie</item>
    </style>

</resources>